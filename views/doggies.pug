extends layout

block content
    #main
        h1=title
        
    aside.filters_div
        form#form(action="/filtered" method="post")
            label(for="") Breed
            select#breeds(name="")
                option(value="-1") Select a breed
                option(value="Border Collie") Border Collie
                option(value="Labrador") Labrador
                option(value="Pug") Pug
                option(value="Gran Danes") Gran Danes
            label(for="") Size
            select#sizes(name="")
                option(value="-1") Select size
                option(value="Small") Small
                option(value="Medium") Medium
                option(value="Large") Large
            label(for="") Age
            select#ages(name="")
                option(value="-1") Select age
                option(value="Puppy") Puppy
                option(value="Adult") Adult
                option(value="Senior") Senior
            #btn-filter-div
                input#btn-filter(type="submit" valu="Filter")

    .dogs_div
        for dog in dogsPerPage
            .dog  
                figure
                    img(src=dog.img alt='dog picture')
                .info
                    p.breed=dog.breed
                    p.age=dog.age
                    .dogsBtn
                    a(href='/'+page+'/'+dog.id) Info
                    .fav  
                    p
                        i(class="far fa-heart")
    .pages-div        
        ul
            each pag, index in pages
                li= index+1 
                    a(href=pag) pag
